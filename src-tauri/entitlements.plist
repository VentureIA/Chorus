<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow the app to be run without strict code signing checks during development -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Allow DYLD environment variables (needed for some libraries) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>

    <!-- Disable library validation (needed for bundled binaries like chorus-mcp-server) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Allow JIT compilation (needed for terminal emulation) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Network access for MCP servers -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- File access - user-selected files (via file picker) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Bookmarks for persisting file access permissions -->
    <key>com.apple.security.files.bookmarks.app-scope</key>
    <true/>
</dict>
</plist>
