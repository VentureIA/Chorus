{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Chorus",
  "version": "0.1.1",
  "identifier": "com.chorus.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Chorus",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 600,
        "decorations": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: asset:; img-src 'self' data: tauri: asset:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' tauri: asset:; font-src 'self' data:;",
      "devCsp": "default-src 'self' tauri: asset:; img-src 'self' data: tauri: asset:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' tauri: asset: ws://localhost:1420;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../target/release/chorus-mcp-server*"
    ],
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": "./entitlements.plist"
    }
  }
}
